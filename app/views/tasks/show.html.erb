<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<% if @task.completed == true %>
<p> This task is completed </p>
<% elsif @task.completed == false %>
<p> This task is not completed </p>
<% else %>
<p> Task completion undefined </p>
<% end %>

<%= link_to 'edit task', edit_task_path %>

<%= link_to 'back to home', tasks_path %>

<%= link_to "delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: 'Are you sure?' }  %>
